# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Via https://trac.dealnews.com/wiki/CodingStandards
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

[*.{php,css,scss,html,htm}]
indent_style = space
indent_size = 4

[*.{js,json}]
indent_style = space
indent_size = 2
